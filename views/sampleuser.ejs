<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <style>
      body {
        background-color: steelblue;
      }
    </style>
    <section class="vh-100 gradient-custom">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem">
              <div class="card-body p-5 text-center">
                <div class="mb-md-5 mt-md-4 pb-5">
                  <h2 class="fw-bold mb-2 text-uppercase">Make Account</h2>
                  <p class="text-white-50 mb-5">Enter Your username and Code</p>
                  <% if(flasherrormessage.length>0){%>
                  <div
                    class="alert alert-danger alert-dismissible fade show"
                    role="alert"
                  >
                    <strong><%=flasherrormessage%></strong>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="alert"
                      aria-label="Close"
                    ></button>
                  </div>
                  <%}%>
                  <form action="/sample" method="post">
                    <div class="form-outline form-white mb-4">
                      <input
                        type="text"
                        id="typeEmailX"
                        class="form-control form-control-lg input"
                        autofocus
                        placeholder="👤 Your name."
                        name="name"
                        required
                      />
                      <label class="form-label usernameMessage" for="typeEmailX"
                        >Enter Username</label
                      >
                    </div>

                    <div class="form-outline form-white mb-4">
                      <input
                        type="text"
                        id="typePasswordX"
                        class="form-control form-control-lg code"
                        placeholder="Code here 🔐"
                        required
                        name="code"
                      />
                      <label
                        class="form-label roomh3 text-start"
                        for="typePasswordX"
                      >
                        Enter Existing Room
                      </label>
                    </div>
                    <div class="text-center">
                      <div>
                        <P class="fs-3">Make My own room</P>
                      </div>
                      <div class="make">
                        <button
                          type="button"
                          class="btn btn-primary btn-lg px-5"
                        >
                          MAKE
                        </button>
                      </div>
                    </div>

                    <button
                      class="btn btn-outline-light btn-lg px-5 mt-5 joinRoom"
                      type="submit"
                    >
                      Enter Room
                    </button>
                  </form>

                  <div
                    class="d-flex justify-content-center text-center mt-4 pt-1"
                  >
                    <a href="#!" class="text-white"
                      ><i class="fab fa-facebook-f fa-lg"></i
                    ></a>
                    <a href="#!" class="text-white"
                      ><i class="fab fa-twitter fa-lg mx-4 px-2"></i
                    ></a>
                    <a href="#!" class="text-white"
                      ><i class="fab fa-google fa-lg"></i
                    ></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script>
      const makeroombutton = document.querySelector(".make");
      const joinRoombutton = document.querySelector(".joinRoom");
      const code = document.querySelector(".code");
      const textAfterMakingRoom = document.querySelector(".roomh3");
      const connectFriendsText = document.querySelector("h4");
      const username = document.querySelector(".input");
      const usernameMessage = document.querySelector(".usernameMessage");
      makeroombutton.addEventListener("click", () => {
        textAfterMakingRoom.textContent = "Your Room Id";
        textAfterMakingRoom.classList.remove("text-danger");
        textAfterMakingRoom.classList.add("text-success");
        if (username.value === "") {
          usernameMessage.textContent = "Enter Username *";
          usernameMessage.classList.add("text-danger");
        }

        // connectFriendsText.textContent =
        //   "Share this id with friends to connect to them";
        code.value = "<%= entryCode %>";
      });

      joinRoombutton.addEventListener("click", (e) => {
        if (username.value === "") {
          usernameMessage.textContent = "Enter Username *";
          usernameMessage.classList.add("text-danger");
        }
        if (code.value === "") {
          textAfterMakingRoom.textContent = "Enter Code *";
          textAfterMakingRoom.classList.add("text-danger");
        }
      });
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
